<launch>
  <arg name="input/radar" default="input/radar" />
  <arg name="output/pointcloud" default="output/pointcloud" />
  <arg name="update_rate_hz" default="20.0" />

  <node pkg="radar_scan_to_pointcloud2" exec="radar_scan_to_pointcloud2_node" name="radar_scan_to_pointcloud2" output="screen">
    <remap from="~/input/radar" to="$(var input/radar)"/>
    <remap from="~/output/pointcloud" to="$(var output/pointcloud)"/>
    <param name="update_rate_hz" value="$(var update_rate_hz)"/>
  </node>
</launch>
